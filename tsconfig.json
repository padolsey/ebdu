{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ESNext",
      "target": "ES2020",
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true
    }
  }
